# CRA Scraper Configuration Example
# Copy to .env and fill in your actual values

# Required: Qdrant Vector Database Configuration
QDRANT_API_KEY=your_qdrant_api_key_here
QDRANT_ENDPOINT=your_qdrant_endpoint_here
QDRANT_CLUSTER_NAME=your_cluster_name_here
QDRANT_CLUSTER_ID=your_cluster_id_here

# Optional: Scraping Limits (conservative defaults for gov sites)
CRA_LIMITS__MAX_REQUESTS_PER_MINUTE=10
CRA_LIMITS__MAX_REQUESTS_PER_HOUR=200
CRA_LIMITS__MAX_REQUESTS_PER_DAY=1000
CRA_LIMITS__REQUEST_DELAY=3.0

# Optional: Text Processing
CRA_MIN_TEXT_LENGTH=50
CRA_MAX_TEXT_LENGTH=10000

# Optional: Storage
CRA_DATA_DIR=./cra_data

# Optional: Logging
CRA_LOG_LEVEL=INFO